{
"compilerOptions": {
    "target": "es2016",
    "outDir": "_bin", 
    "module": "commonjs",                 
    "rootDir": "./src",                  
    "esModuleInterop": true,                      
    "noImplicitAny": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
},
"include": [ "src/**/*" ]
}
